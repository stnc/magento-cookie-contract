<?xml version="1.0"?>
<config>
    <modules>
        <stnc_cookiecontract>
            <version>1.0</version>
        </stnc_cookiecontract>
    </modules>
    <global>
        <helpers>
            <stnc_cookiecontract>
                <class>Stnc_CookieContract_Helper</class>
            </stnc_cookiecontract>
        </helpers>
        <blocks>
            <stnc_cookiecontract>
                <class>Stnc_CookieContract_Block</class>
            </stnc_cookiecontract>
        </blocks>
        <models>
            <stnc_cookiecontract>
                <class>Stnc_CookieContract_Model</class>
            </stnc_cookiecontract>
        </models>

    </global>


    <frontend>
        <layout>
            <updates>
                <stnc_cookiecontract>
                    <file>Stnc_CookieContract.xml</file>
                </stnc_cookiecontract>
            </updates>
        </layout>
        <translate>
            <modules>
                <stnc_cookiecontract>
                    <files>
                        <default>Stnc_CookieContract.csv</default>
                    </files>
                </stnc_cookiecontract>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <translate>
            <modules>
                <stnc_cookiecontract>
                    <files>
                        <default>Stnc_CookieContract.csv</default>
                    </files>
                </stnc_cookiecontract>
            </modules>
        </translate>
        <layout>
            <updates>
                <stnc_cookiecontract>
                    <file>Stnc_CookieContract.xml</file>
                </stnc_cookiecontract>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <stnc_cookiecontract>
                                            <title>Mageticaret Cookie Sözleşmeleri</title>
                                        </stnc_cookiecontract>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <default>
        <stnc_cookiecontract>
            <general>
                <type>v-bar</type>
                <bar_position>v-top</bar_position>
                <box_position>v-bottom-right</box_position>
                <skin>v-yellow-alert</skin>
                <behaviour>365</behaviour>
                <autohide>0</autohide>
            </general>
            <content>
                <show>default</show>
                <custom_message>This websites use cookies.</custom_message>
                <custom_accept>Close</custom_accept>
                <custom_more_info>More information</custom_more_info>
                <cms_page>privacy-policy-cookie-restriction-mode</cms_page>
            </content>
        </stnc_cookiecontract>
    </default>
    
</config>
